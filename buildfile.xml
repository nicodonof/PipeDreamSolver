<project name="pipedream" default="dist" basedir=".">
    <target name="compile">
        <mkdir dir="bin"/>
        <javac srcdir="src" destdir="bin"/>
    </target>
    <target name="dist" depends="compile">
        <jar destfile="proy.jar" basedir="bin">
    	<manifest>
    		<attribute name="Main-Class" value="defaulter.Main"/>
    	</manifest> 
        </jar>
	</target>
    <target name="clean">
 		<delete dir="bin"/>
 		<delete dir="doc" />
 	</target> 
</project>